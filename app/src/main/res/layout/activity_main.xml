<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvLista"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/etNewName"
        />
    <EditText
        android:id="@+id/etNewName"
        android:layout_width="750px"
        android:layout_height="wrap_content"
        android:hint="Unesite novo ime:"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        />
    <Button
        android:id="@+id/bNewName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rvLista"
        android:layout_toRightOf="@+id/etNewName"
        android:text="Unesi"
        android:layout_marginHorizontal="30px"
        android:onClick="addCell"
        />




</RelativeLayout>